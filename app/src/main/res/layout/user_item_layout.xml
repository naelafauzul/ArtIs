<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/button_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image_search"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/user_name_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/user_profile_image_search"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/user_full_name_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user profile name"
        android:textSize="12dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/user_profile_image_search"
        android:layout_below="@id/user_name_search"
        android:layout_marginStart="10dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/follow_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/user_full_name_search"
        android:layout_toEndOf="@id/user_profile_image_search"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Follow"
        android:textAllCaps="false" />


</RelativeLayout>
